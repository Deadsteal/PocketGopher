<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.afonsotrepa.pocketgopher">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gopherclient.MenuActivity"></activity>
        <activity android:name=".gopherclient.TextFileActivity"></activity>
        <activity android:name=".gopherclient.SearchActivity"></activity>
        <activity android:name=".EditBookmarkActivity"></activity>
        <activity android:name=".gopherclient.ImageActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>